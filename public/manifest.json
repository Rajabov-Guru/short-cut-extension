{
  "name": "My Short Keys",
  "version": "0.1.5",
  "description": "Make short key for any button at any page",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "vite.png",
      "24": "vite.png",
      "32": "vite.png"
    },
    "default_title": "My Short Key",
    "default_popup": "index.html"
  },
  "manifest_version": 3
}
